package nesting.simulations.test;

import ned.DatarateChannel;
import nesting.node.ethernet.VEtherSwitchPreemptable;
import nesting.node.ethernet.VLANEtherHost;
import nesting.node.ethernet.host.FullLoadVLANHost;
import nesting.node.ethernet.host.VLANHost;


network TestNetwork
{
    types:
        channel C extends DatarateChannel
        {
            delay = 0.1us;
            datarate = 0.1Gbps;
        }
    submodules:
        switchA: VEtherSwitchPreemptable {
            parameters:
                @display("p=188,127");
            gates:
                ethg[3];
        }
        workstation1: FullLoadVLANHost {
            @display("p=79,62");
        }
        robotController: VLANEtherHost {
            @display("p=79,202");
        }
        sink: VLANHost {
            @display("p=307,128");
        }
    connections:
        robotController.ethg <--> C <--> switchA.ethg[0];
        workstation1.ethg <--> C <--> switchA.ethg[1];

        switchA.ethg[2] <--> C <--> sink.ethg;
}
